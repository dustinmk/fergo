<html>
    <head>
        <title>Benchmark Runner</title>
        <style>
            table {
                table-layout: fixed;
                width: 100%;
                border-collapse: collapse;
                border: 3px solid black;
                margin: 8px;
            }

            thead th:nth-child(1) {
                width: 30%;
                border: 1px solid black;
            }

            thead th:nth-child(2) {
                width: 20%;
            }

            thead th:nth-child(3) {
                width: 15%;
            }

            thead th:nth-child(4) {
                width: 35%;
            }

            th, td {
                padding: 4px;
                border: 1px solid black;
            }
        </style>
    </head>
    <body>
        <div id="root"></div>
        {{#scripts}}
            <script src={{src}}></script>
        {{/scripts}}
    </body>
</html>